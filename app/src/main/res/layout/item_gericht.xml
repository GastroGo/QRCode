<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gerichtLayout"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@drawable/selector_gericht_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="30dp">


        <TextView
            android:id="@+id/textViewGerichtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Name" />

        <TextView
            android:id="@+id/textViewGerichtPreis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:textColor="@color/black"
            android:text="Preis" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewAdditionalInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#3E3C3C"
            android:text="Zutaten"
            android:layout_marginTop="0dp"
            android:paddingLeft="15dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMinus"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_minus_icon"
            android:outlineSpotShadowColor="@color/zxing_transparent"
            app:fabCustomSize="30dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1dp"
            android:text="0" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnPlus"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_plus_icon"
            android:outlineSpotShadowColor="@color/zxing_transparent"
            app:fabCustomSize="30dp" />
    </LinearLayout>

</LinearLayout>
