<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Zustand, wenn das Gericht ausgewählt ist -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Hier Farbe nach Bedarf ändern -->
            <stroke android:color="@color/light_third" android:width="2.7dp"/>
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Standardzustand (nicht ausgewählt) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Hier die Standard-Hintergrundfarbe angeben -->
            <stroke android:color="#000000" android:width="1.5dp"/>
            <padding android:bottom="20dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>
